<div class="navbar-pusher">
  <div class="form-title">
    <h3>To upload books, you will first need to create yourself an "Editor" profile</h3>
  </div>
  <div class="container form-container">
    <%= simple_form_for(@editor) do |f| %>
      <%= f.input :name, placeholder: "What is your/the company you're representing's name?" %>
      <%= f.input :email, required: false, placeholder: "By default: #{current_user.email}" %>
      <%= f.input :phone_number, placeholder: "+33 70 70 70 70" %>
      <%= f.input :address %>
      <%= f.input :more_info, label: "Is there something else you would like potential producers to know?" %>
      <div class="form-actions">
        <%= f.button :submit, "Create your account!", class:"btn form-btn-validate editor-btn" %>
      </div>
    <% end %>
  </div>
</div>
